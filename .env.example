# ========================================
# WORKLEDGER ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git

# ========================================
# SUPABASE CONFIGURATION
# ========================================
# Get these from: https://app.supabase.com/project/_/settings/api

VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ========================================
# APPLICATION CONFIGURATION
# ========================================

# App Environment: development | staging | production
VITE_APP_ENV=development

# App Name (displayed in UI)
VITE_APP_NAME=WorkLedger

# App URL (for PWA and redirects)
VITE_APP_URL=http://localhost:5173

# ========================================
# FEATURES FLAGS (Optional)
# ========================================

# Enable offline mode (default: true)
VITE_ENABLE_OFFLINE=true

# Enable PWA installation prompt (default: true)
VITE_ENABLE_PWA=true

# Enable analytics (default: false in development)
VITE_ENABLE_ANALYTICS=false

# ========================================
# STORAGE CONFIGURATION
# ========================================

# Max file size for uploads (in MB)
VITE_MAX_FILE_SIZE_MB=5

# Max photos per work entry
VITE_MAX_PHOTOS_PER_ENTRY=10

# ========================================
# SYNC CONFIGURATION
# ========================================

# Sync interval when online (in seconds, default: 30)
VITE_SYNC_INTERVAL_SECONDS=30

# Max retry attempts for failed sync
VITE_SYNC_MAX_RETRIES=3

# ========================================
# PDF GENERATION
# ========================================

# Company logo URL (optional, for PDF headers)
VITE_COMPANY_LOGO_URL=

# Default PDF orientation: portrait | landscape
VITE_PDF_ORIENTATION=portrait

# Default PDF page size: A4 | letter
VITE_PDF_PAGE_SIZE=A4

# ========================================
# NOTES
# ========================================
# 
# 1. All variables prefixed with VITE_ are exposed to the frontend
# 2. Keep sensitive data (API keys) in backend/server-side env vars
# 3. Supabase ANON key is safe to expose (it's public by design)
# 4. RLS policies protect your data, not environment variables
#
